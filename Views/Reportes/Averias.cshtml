@model IEnumerable<EsquemasSecundarios.Models.Averias>

@{
    ViewBag.Title = "Reporte de Averías";
}

<!-- FILTROS -->
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Utilize los filtros necesarios para optimizar su reporte</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-question"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Settings 1</a>
                            </li>
                            <li>
                                <a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <!-- content starts here -->
                <div class="row clearfix">
                    <div class="col-md-2">
                        <div class="form-group">
                            <small>Filtrar por Fecha del Reporte:</small>
                            <div class='input-group date'>
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                                <input id="FReporte" class="form-control" type="text" style="height:38px;">
                            </div>
                        </div>                        
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <small>Filtrar por Subestación:</small>
                            @Html.DropDownList("Subestaciones", null, "", htmlAttributes: new { @class = "select2_single form-control", @id = "Subestacion" })
                        </div>
                    </div>
                    <div class="pull-right">
                        <div class="form-group">
                            <a href="@Url.Action("Averias","Reportes")" class="btn btn-app">
                                <i class="fa fa-repeat"></i> Restablecer
                            </a>
                        </div>
                    </div>
                </div>
                <!-- content ends here -->
            </div>
        </div>
    </div>
</div>
<!-- TABLA DE REPORTE -->
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Datos del reporte</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-question"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Settings 1</a>
                            </li>
                            <li>
                                <a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <!-- content starts here -->
                <div class="row">
                    <div class="col-md-12" id="tablaContenido">
                        <table id="dtexport" class="table table-striped table-bordered table-hover table-responsive">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.FechaReporte)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Subestacion)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Esquema)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.FechaAtencion)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PersonaQueAtendio)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ElaboradoPor)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.RevisadoPor)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AprobadoPor)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DatosReportados)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Analisis)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Conclusiones)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Recomendaciones)
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FechaReporte)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CodSubestacion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Esquema.Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FechaAtencion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PersonaQueAtendio)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ElaboradoPor)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RevisadoPor)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AprobadoPor)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DatosReportados)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Analisis)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Conclusiones)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Recomendaciones)
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
                <!-- content ends here -->
            </div>
        </div>
    </div>
</div>


@section styles {
@Styles.Render("~/Style/DataTables")
@Styles.Render("~/Style/Select2")
@Styles.Render("~/Style/DateRangePicker")
}

@section script {
@Scripts.Render("~/Script/DataTables")
@Scripts.Render("~/Script/Select2")
<script src="~/Scripts/moment.min.js"></script>
<script src="~/Scripts/daterangepicker.js"></script>
<script>
    $(function () {
        var fechaIni = moment().startOf('year').format('YYYY-MM-DD');
        var fechaFin = moment().format('YYYY-MM-DD');
        var Subestacion = "";

        $('#FReporte').daterangepicker({
            startDate: moment().startOf('year'),
            endDate: moment(),
            ranges: {
                'Hoy': [moment(), moment()],
                'Ayer': [moment().subtract('days', 1), moment().subtract('days', 1)],
                'Últimos 7 Días': [moment().subtract('days', 6), moment()],
                'Últimos 30 Días': [moment().subtract('days', 29), moment()],
                'Este Mes': [moment().startOf('month'), moment().endOf('month')],
                'Último Mes': [moment().subtract('month', 1).startOf('month'), moment().subtract('month', 1).endOf('month')]
            },
            format: 'DD/MM/YYYY',
            dateLimit: {
                months: 12
            },
            locale: {
                applyLabel: 'Aplicar',
                cancelLabel: 'Cancelar',
                fromLabel: 'Desde',
                toLabel: 'Hasta',
                customRangeLabel: 'Personalizar',
                daysOfWeek: ['Do', 'Lu', 'Ma', 'Mi', 'Ju', 'Vi', 'Sa'],
                monthNames: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'],
                firstDay: 1
            }
        },
        function (start, end, label) {
            fechaIni = start.format('YYYY-MM-DD');
            fechaFin = end.format('YYYY-MM-DD');
            Filtrar();
        });

        $("#Subestacion").change(
            function () {
                Subestacion = $(this).val();
                Filtrar();
            });

        function Filtrar() {
            $.ajax({
                url: '@Url.Action("CargarAverias", "Reportes")',
                method: "POST",
                data: { FechaInicio: fechaIni, FechaFin: fechaFin, codSub: Subestacion },
                success: function (data) {
                    $('#tablaContenido').html(data);
                    InitDataTables();
                }
            });
        }
    });

</script>
}