@model EsquemasSecundarios.Models.EsquemaProteccion

@{
    ViewBag.Title = "Esquemas de protección";
    ViewBag.PTitle = "Detalles del esquema";
}
<!-- content starts here -->
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>@ViewBag.PTitle</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-question"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Settings 1</a>
                            </li>
                            <li>
                                <a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <!-- content starts here -->
                <div class="row clearfix">
                    <!-- price element -->
                    <div class="col-md-12">
                        <div class="pricing">
                            <div class="x_content">
                                <div class="">
                                    <div class="pricing_features">
                                        <h3>Datos generales del esquema</h3>
                                        <table class="table">
                                            <tr>
                                                <th>Nombre del esquema</th>
                                                <td>@Html.DisplayFor(model => model.Nombre)</td>
                                            </tr>
                                            <tr>
                                                <th>Tipo de instalación</th>
                                                <td>@Html.DisplayFor(model => model.Subestacion)</td>
                                            </tr>
                                            <tr>
                                                <th>Tipo de equipo primario</th>
                                                <td>@Html.DisplayFor(model => model.Tipo_Equipo_Primario)</td>
                                            </tr>
                                            <tr>
                                                <th>Nombre del elemento eléctrico</th>
                                                <td>@Html.DisplayFor(model => model.Elemento_Electrico)</td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                                <hr />
                                <p>
                                    <a class="btn btn-info" href="@Url.Action("Edit","EsquemasProteccion", new { id = Model.id_Esquema })"><i class="fa fa-edit"></i> Editar</a>
                                    <a class="btn btn-default" href="@Url.Action("Index","EsquemasProteccion")"><i class="fa fa-list"></i> Listado</a>
                                </p>
                            </div>
                        </div>
                    </div>
                    <!-- price element -->
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <h3>Elementos asociados al esquema</h3>
                                <div class="col-md-3">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Interruptores</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in ViewBag.Interruptores)
                                            {
                                                <tr>
                                                    <td>@item</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <div class="col-md-3">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>TC</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in ViewBag.TC)
                                            {
                                                <tr>
                                                    <td>@item</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <div class="col-md-3">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>TP</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in ViewBag.TP)
                                            {
                                                <tr>
                                                    <td>@item</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <div class="col-md-3">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Relevadores</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in ViewBag.Relevadores)
                                            {
                                                <tr>
                                                    <td>@item</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- content ends here -->
            </div>
        </div>
    </div>
</div>