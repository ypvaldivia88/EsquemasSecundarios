@model IEnumerable<EsquemasSecundarios.Models.TipoMantenimiento>

@{
    ViewBag.Title = "Tipos de Mantenimientos";
    ViewBag.PTitle = "Listado de tipos de mantenimientos";
}

<div class="row">
    <div class="col-md-12">
        <table id="datatable-buttons" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Tipo)
                    </th>
                    <th></th>
                </tr>
            </thead>            
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tipo)
                    </td>
                    <td>
                        <a href="@Url.Action("Details","TipoMantenimiento", new { id = item.id_Tipo } )" class="btn btn-info btn-xs" title="Detalles"><i class="fa fa-eye"></i>  </a>
                        <a href="@Url.Action("Edit","TipoMantenimiento", new { id = item.id_Tipo } )" class="btn btn-warning btn-xs" title="Editar"><i class="fa fa-pencil"></i>  </a>
                        <a href="@Url.Action("Delete","TipoMantenimiento", new { id = item.id_Tipo } )" class="btn btn-danger btn-xs" title="Eliminar"><i class="fa fa-trash-o"></i>  </a>
                    </td>
                </tr>
            }
            </tbody>           

        </table>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <a href="@Url.Action("Create","TipoMantenimiento")" class="btn btn-info"><i class="fa fa-plus"></i> Nuevo</a>
    </div>
</div>


@section styles {
    @Styles.Render("~/Style/DataTables")
}

@section script {
    @Scripts.Render("~/Script/DataTables")
    @Scripts.Render("~/Script/DT-Buttons")
    @Scripts.Render("~/Script/DT-Init")
}
