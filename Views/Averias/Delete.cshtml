@model EsquemasSecundarios.Models.Averias

@{
    ViewBag.Title = "Averías";
    ViewBag.PTitle = "Eliminar avería";
}

<!-- content starts here -->
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>@ViewBag.PTitle</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-question"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Settings 1</a>
                            </li>
                            <li>
                                <a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <!-- content starts here -->
                <h3>¿Seguro que desea eliminar esta Avería?</h3>
                <div>
                    <div class="row clearfix">
                        <div class="col-md-12">
                            <table class="table">
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Subestacion)</th>
                                    <td>@Html.DisplayFor(model => model.CodSubestacion)</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Esquema)</th>
                                    <td>@ViewBag.Esquema</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.FechaReporte)</th>
                                    <td>@Html.DisplayFor(model => model.FechaReporte)</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.FechaAtencion)</th>
                                    <td>@Html.DisplayFor(model => model.FechaAtencion)</td>
                                </tr>
                                <tr>
                                    <th> @Html.DisplayNameFor(model => model.PersonaQueAtendio)</th>
                                    <td>@Html.DisplayFor(model => model.PersonaQueAtendio)</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.DatosReportados)</th>
                                    <td>@Html.DisplayFor(model => model.DatosReportados)</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Analisis)</th>
                                    <td>@Html.DisplayFor(model => model.Analisis)</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Conclusiones)</th>
                                    <td>@Html.DisplayFor(model => model.Conclusiones)</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Recomendaciones)</th>
                                    <td>@Html.DisplayFor(model => model.Recomendaciones)</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.ElaboradoPor)</th>
                                    <td>@Html.DisplayFor(model => model.ElaboradoPor)</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.RevisadoPor)</th>
                                    <td>@Html.DisplayFor(model => model.RevisadoPor)</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.AprobadoPor)</th>
                                    <td>@Html.DisplayFor(model => model.AprobadoPor)</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <hr />
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <button type="submit" class="btn btn-danger"><i class="fa fa-eraser"></i> Eliminar</button>
                            <a class="btn btn-default" href="@Url.Action("Index","Averias")"><i class="fa fa-list"></i> Listado</a>
                        </div>
                    }
                </div>
                <!-- content ends here -->
            </div>
        </div>
    </div>
</div>

