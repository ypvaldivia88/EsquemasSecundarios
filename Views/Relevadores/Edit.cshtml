@model EsquemasSecundarios.Models.Relevador

@{
    ViewBag.Title = "Relevador";
    ViewBag.PTitle = "Editar";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Nro_Serie)

        <h2>Número de serie</h2>
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <div class="form-line">
                        @Html.EditorFor(model => model.Nro_Serie, new { htmlAttributes = new { @class = "form-control", @placeholder = "Escriba el número de serie" } })
                        @Html.ValidationMessageFor(model => model.Nro_Serie, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <h2>Ubicado</h2>
        @Html.ValidationMessageFor(model => model.Ubicado, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <div class="form-line">
                        <input class="js-switch form-control" name="Ubicado" value="true" style="display: none;" data-switchery="true" type="checkbox">
                        <div class=""></div>
                    </div>
                </div>
            </div>
        </div>

        <h2>Voltaje alterno</h2>
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <div class="form-line">
                        @Html.EditorFor(model => model.Voltaje_Alterno, new { htmlAttributes = new { @class = "form-control", @type = "number", @placeholder = "Inserte un valor numérico" } })
                        @Html.ValidationMessageFor(model => model.Voltaje_Alterno, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <h2>Voltaje directo</h2>
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <div class="form-line">
                        @Html.EditorFor(model => model.Voltaje_Directo, new { htmlAttributes = new { @class = "form-control", @type = "number", @placeholder = "Inserte un valor numérico" } })
                        @Html.ValidationMessageFor(model => model.Voltaje_Directo, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <h2>Plantilla de relevador</h2>
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <div class="form-line">
                        @Html.DropDownList("id_Plantilla", null, "--Seleccione--", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.id_Plantilla, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-warning"><i class="fa fa-refresh"></i> Actualizar</button>
                <a class="btn btn-default" href="@Url.Action("Index","Relevadores")"><i class="fa fa-list"></i> Listado</a>
            </div>
        </div>
    </div>
}