@model IEnumerable<EsquemasSecundarios.Models.Relevador>

@{
    ViewBag.Title = "Relevadores";
    ViewBag.PTitle = "Listado";
}

<div class="row">
    <div class="col-md-12">

        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        Número de serie
                    </th>
                    <th>
                        Modelo
                    </th>
                    <th>
                        Ubicado
                    </th>
                    <th>
                        Voltaje alterno
                    </th>
                    <th>
                        Voltaje directo
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nro_Serie)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Plantilla.Modelo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ubicado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Voltaje_Alterno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Voltaje_Directo)
                    </td>
                    <td>
                        <a href="@Url.Action("Details","Relevadores", new { id = item.Nro_Serie } )" class="btn btn-info btn-xs" title="Detalles"><i class="fa fa-eye"></i>  </a>
                        <a href="@Url.Action("Edit","Relevadores", new { id = item.Nro_Serie } )" class="btn btn-warning btn-xs" title="Editar"><i class="fa fa-pencil"></i>  </a>
                        <a href="@Url.Action("Delete","Relevadores", new { id = item.Nro_Serie } )" class="btn btn-danger btn-xs" title="Eliminar"><i class="fa fa-trash-o"></i>  </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <a href="@Url.Action("Create","Relevadores")" class="btn btn-info"><i class="fa fa-plus"></i> Nuevo</a>
    </div>
</div>


@section styles {
    @Styles.Render("~/Style/DataTables")
}

@section script {

    @Scripts.Render("~/Script/DataTables")

    <!-- Datatables -->
    <script>
        $(document).ready(function () {
            $(".table").DataTable();
        });
    </script>
    <!-- /Datatables -->
}
